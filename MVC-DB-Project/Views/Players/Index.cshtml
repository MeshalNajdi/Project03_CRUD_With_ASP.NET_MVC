@{var Players = (List<PlayerModel>)ViewData["Players"];
   @* var Pid = (PlayerModel)ViewData["sId"];
    var Pnums = (List<PlayerModel>)ViewData["sNum"];*@
}

<h1>This is the Players Available </h1>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Number</th>
            <th scope="col">CoachId</th>
            <th scope="col">TeamId</th>
            <th scope="col">LeagueId</th>
            <th scope="col">Details</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Players)
        {
        <tr>
            <th scope="row">@player.Id</th>
            <td>@player.name</td>
            <td>@player.number</td>
            <td>@player.CoacheId</td>
            <td>@player.TeamId</td>
            <td>@player.LeagueId</td>
            <td><button type="button" class="btn btn-dark"><a style="color:white" href="/players/details/@player.Id"> SHOW </a></button></td>
            <td><a asp-controller="Players" asp-action="Edit" asp-route-Id="@player.Id"><button type="button" class="btn btn-dark"> Edit </button></a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@player.Id" method="post">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </td>
        </tr>

        }


    </tbody>
</table>
